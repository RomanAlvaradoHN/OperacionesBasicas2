<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesBasicas2.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" Margin="20">
            <Entry x:Name="input1" Keyboard="Numeric" Placeholder="Ingrese el primer número" />
            <Entry x:Name="input2" Keyboard="Numeric" Placeholder="Ingrese el segundo número" />

            <Button Margin="8" Text="Sumar" Clicked="btnSumar_Clicked" />
            <Button Margin="8" Text="Restar" Clicked="btnRestar_Clicked" />
            <Button Margin="8" Text="Multiplicar" Clicked="btnMultiplicar_Clicked" />
            <Button Margin="8" Text="Dividir" Clicked="btnDividir_Clicked" />


            <Button Text="Limpiar" Margin="0, 60, 0, 0" Clicked="btnLimpiar_Clicked" />

        </StackLayout>

        <Button Text="Salir" Clicked="btnSalir_Clicked" Grid.Row="1" BackgroundColor="Red" TextColor="White" />
    </Grid>

</ContentPage>
